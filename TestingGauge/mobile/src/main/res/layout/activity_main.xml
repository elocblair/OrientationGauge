<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nutri_000.testinggauge.MainActivity"
    android:background="#222222">

    <!--<android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clipChildren="false"
        >

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stim_buton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="stimClicked"
        android:src="@drawable/ic_flash_on_24dp"
        app:borderWidth="0dp"
        app:fabSize="normal" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:elevation="3dp"
        android:onClick="scanAgain"
        android:text="scan"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColorLink="#A59D95"
        android:textSize="15dp"
        android:visibility="visible" />

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <Button
        android:id="@+id/calibrate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="top|left"
        android:layout_marginBottom="10dp"
        android:onClick="gravityOrientation"
        android:text="calibrate"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="invisible"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|right" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        custom:srcCompat="@drawable/stimage" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/repairlogo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="110dp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/relativeHip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/upperLegButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:onClick="connectThigh"
                android:text="Connect Hip Sensor"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/topAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topLabel"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#69BE28"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBarTopLeft"
                android:layout_weight="1"
                android:text="hip angle"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/topLabel"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/upperLegButton"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarTopLeft"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progressBarTopRight"

                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarTopRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/topLabel"
                android:layout_below="@+id/upperLegButton"
                android:layout_marginLeft="200dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

            <SeekBar
                android:id="@+id/seekBarTopLeft"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upperLegButton"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeKnee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/lowerLegButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:onClick="connectLowerLeg"
                android:text="Connect Knee Sensor"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/midAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/midLabel"
                android:layout_weight="0.09"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#69BE28"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/midLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBarMidLeft"
                android:elevation="1dp"
                android:text="knee angle"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/midLabel"
                android:layout_below="@+id/lowerLegButton"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarMidLeft"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progressBarMidRight"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarMidLeft"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lowerLegButton"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

            <SeekBar
                android:id="@+id/seekBarMidRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lowerLegButton"
                android:layout_marginLeft="200dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeAnkle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/footButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="connectFoot"
                android:text="Connect Ankle Sensor"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/bottomLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBarBottomLeft"
                android:text="foot angle"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/bottomAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottomLabel"
                android:layout_weight="0.09"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#69BE28"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomLabel"
                android:layout_below="@id/footButton"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarBottomLeft"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.43"
                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progressBarBottomRight"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.43"
                    android:max="100"
                    android:paddingRight="5dp"
                    android:progress="0"
                    android:progressTint="#69BE28"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarBottomRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/footButton"
                android:layout_marginLeft="200dp"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

            <SeekBar
                android:id="@+id/seekBarBottomLeft"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/footButton"
                android:layoutDirection="rtl"
                android:max="100"
                android:progress="100"
                android:progressTint="#696969"
                android:thumb="@drawable/seek_arc_control_selector" />

        </RelativeLayout>



    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>